.pop-box {
  width: 560rpx;
  background: var(--pop-bg-color);
  border-radius: 16rpx;
  position: relative;
  overflow: hidden;
  display: inline-block;
  vertical-align: middle;
}

.pop-option {
  width: 100%;
  height: 94rpx;
  border-top: 1px #F1F1F1 solid;
  border-bottom: 1px #F1F1F1 solid;
  display: flex;
}

.pop-option view {
  width: 50%;
  text-align: center;
  line-height: 94rpx;
}

.pop-option view:first-child {
  border-right: 1px #F1F1F1 solid;
}

.pop-title {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(34, 34, 34, 1);
  text-align: center;
  line-height: 120rpx;
}
.pop-content {
  padding-bottom: 30rpx;
}

.pop-bar {
  height: 120rpx;
  line-height: 120rpx;
}

.pop-bar .cancel-text {
  color: var(--cancel-text-color);
  font-size: 30rpx;
  padding: 0 40rpx;
}
.pop-bar .confirm-text {
  color: var(--confirm-text-color);
  font-size: 30rpx;
  padding: 0 40rpx;
}