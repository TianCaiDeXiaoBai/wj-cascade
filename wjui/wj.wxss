.cell {
  padding: 32rpx;
  position: relative;
}

.cell-label {
  font-size: 28rpx;
  color: #333;
  position: relative;
}

.cell-label.must::after {
  position: absolute;
  content: "*";
  color: #ee0a24;
  left: -16rpx;
  top: 0;
}

.cell-content {
  font-size: 28rpx;
  color: #333;
}

.cell+.cell::after {
  position: absolute;
  box-sizing: border-box;
  content: ' ';
  pointer-events: none;
  right: 32rpx;
  top: 0;
  left: 32rpx;
  border-bottom: 1px solid #ebedf0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

