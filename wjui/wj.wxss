.modal{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1110;
  opacity: 0;
  outline: 0;
  text-align: center;
  backface-visibility: hidden;
  perspective: 2000rpx;
  background: rgba(0, 0, 0, 0.5);
  transition: all 0.3s ease-in-out 0s;
  pointer-events: none;

}
.modal-scale {
  transform: scale(1.2);
}

.modal-scale::before {
  content: " ";
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}


.modal-scale {
  opacity: 0;
}
.modal-fade {
  transform: scale(1.2);

}

.modal-fade::before {
  content: " ";
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}

.modal-bottom {
  margin-bottom: -1000px;
}
.modal-bottom::before {
  content: " ";
  display: inline-block;
  height: 100%;
  vertical-align: bottom;
}
.modal-bottom .pop-box {
  margin-left: auto;
  margin-right: auto;
  border-radius: 0;
  width: 100%;
}
.modal-bottom.show {
  margin-bottom: 0;
}

