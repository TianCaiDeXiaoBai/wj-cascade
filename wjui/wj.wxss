/* 按钮 */

page button {
  display: inline-block;
  font-size: 32rpx;
  margin: 0;
  background-color: #FFF;
}

page button.button-hover {

  background-color: #fff;
  opacity: 0.8;
}
page button[disabled]:not([type]) {
  background-color: #DADCE0;
  color: #ffffff;
}
page button.plain {
  border: 2rpx solid var(--color-primary);
  background-color: #fff;
  color: var(--color-primary);
}


page button[type='primary'] {
  background-color: var(--color-primary);
  color: #fff;
}

page button[loading][type='primary'] {
  background-color: var(--color-primary);
  color: #fff;
}

page .button-hover[type='primary'] {
  background-color: var(--color-primary);
  color: #fff;
}


page button[type='primary'].plain {
  border: 2rpx solid var(--color-primary);
  background-color: #fff;
  color: var(--color-primary);
}

page button::after {
  border: none;
}

page button[type='danger'] {
  background-color: var(--color-danger);
  color: #fff;
}

page button[type='danger'].plain {
  border: 2rpx solid var(--color-danger);
  background-color: #fff;
